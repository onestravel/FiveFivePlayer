<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnFiveVideoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Five VideoView Demo" />

        <Button
            android:id="@+id/btnFiveVideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Five Video Player Demo" />

        <Button
            android:id="@+id/btnVideoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Video" />

        <Button
            android:id="@+id/btnTikTokList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tik Tok List " />
    </LinearLayout>

</ScrollView>